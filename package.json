{
  "name": "dotfiler",
  "version": "0.1.0",
  "description": "Keeps track",
  "main": "index.js",
  "type": "module",
  "bin": {
    "dotfiler": "./src/index.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "nodemon",
    "dev:fixtures": "./development-fixtures.sh",
    "test": "jest --runInBand",
    "test:watch": "npm run test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thassiov/dotfiler.git"
  },
  "keywords": [
    "dotfiles",
    "configuration",
    "utility"
  ],
  "author": "Thassio Victor <tvmcarvalho@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thassiov/dotfiler/issues"
  },
  "homepage": "https://github.com/thassiov/dotfiler#readme",
  "dependencies": {
    "chalk": "^4.1.1",
    "faker": "^5.5.3",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "jest": "^27.0.5",
    "nodemon": "^2.0.7",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "babel-jest": "^27.0.5"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src",
      "./develpment-fixtures.sh"
    ],
    "exec": "npm run dev:fixtures && npm start"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
